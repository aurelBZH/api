                },
                "project_id": {
                  "type": "array",
                  "items": {
                    "type": "integer"
                  },
                  "description": "e.g. 1\n"
                },
                "subject_code": {
                  "type": "string",
                  "description": "e.g. test\n"
                },
                "subject_gender": {
                  "type": "string",
                  "description": "e.g. Male\n"
                },
                "subject_ethnicity": {
                  "type": "string",
                  "description": "e.g. Caucasian\n"
                },
                "subject_species": {
                  "type": "string",
                  "description": "e.g. Human\n"
                },
                "subject_age_min": {
                  "type": "integer",
                  "description": "e.g. 10\n"
                },
                "subject_age_max": {
                  "type": "integer",
